<%- include("partials/header") -%>
    <h1>Home</h1>

    <p><%= startingContent %></p>

    <!-- the parameter in the function is the element of the array -->
    <% posts.forEach(function(post) { %>
        <h1><%= post.postTitle %></h1>
        <p><%= post.postBody.slice(0, 150) %> ... <a href="/posts/<%= post.postTitle %>">Read More</a></p>
    <% }); %>
<%- include("partials/footer") -%>
